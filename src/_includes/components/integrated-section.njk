<section class="integrated-section" id="testimonials">
  <div class="container">
    <div class="integrated-header">
      <h2 class="section-title animate" data-effect="fade-in-up">Ihre <strong>Eventpräsenz</strong> beginnt hier</h2>
      <p class="section-description animate" data-effect="fade-in-up" data-delay="100">Professionelle Beratung und effizienten Umsetzung für Ihren lokalen Event</p>
    </div>
    <div class="integrated-content">
      <div class="contact-column animate" data-effect="fade-in-left" data-delay="200" id="kontakt">
        <div class="contact-form">
          <div class="form-header">
            <h3 class="form-title">Richtofferte beantragen</h3>
            <p class="form-subtitle">Erhalten Sie eine massgeschneiderte Lösung für Ihr Event. Unverbindlich und binnen 24 Stunden.</p>
          </div>
          <form id="eventWebsiteForm" method="POST">
            <div class="form-grid">
              <div class="form-field">
                <label for="name" class="form-label">Name / Organisation</label>
                <div class="input-wrapper">
                  <span class="input-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                  </span>
                  <input type="text" id="name" name="name" class="form-input" placeholder="Ihr Name oder Organisation" required>
                </div>
              </div>
              <div class="form-field">
                <label for="email" class="form-label">E-Mail</label>
                <div class="input-wrapper">
                  <span class="input-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                  </span>
                  <input type="email" id="email" name="email" class="form-input" placeholder="Ihre E-Mail-Adresse" required>
                </div>
              </div>
              <div class="form-field">
                <label for="eventName" class="form-label">Name des Events</label>
                <div class="input-wrapper">
                  <span class="input-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                  </span>
                  <input type="text" id="eventName" name="eventName" class="form-input" placeholder="Bezeichnung der Veranstaltung" required>
                </div>
              </div>
              <div class="form-field">
                <label for="eventDate" class="form-label">Datum des Events <span class="optional-mark">(optional)</span></label>
                <div class="input-wrapper">
                  <span class="input-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                  </span>
                  <input type="text" id="eventDate" name="eventDate" class="form-input" placeholder="z.B. 15. Juli 2024" required>
                </div>
              </div>
              <div class="form-field full-width">
                <label for="message" class="form-label">Beschreibung & Anforderungen</label>
                <div class="input-wrapper textarea-wrapper">
                  <textarea id="message" name="message" class="form-textarea without-icon" placeholder="Beschreiben Sie Ihr Event und Ihre spezifischen Anforderungen..." required></textarea>
                </div>
              </div>
            </div>
            <div class="form-footer">
              <div class="form-privacy">
                <div class="checkbox-wrapper">
                  <input type="checkbox" id="privacy" name="privacy" required>
                  <label for="privacy">Ich akzeptiere die <a href="datenschutz.html">Datenschutzerklärung</a> und <a href="agb.html">AGB</a></label>
                </div>
              </div>
              <button type="submit" class="form-submit">
                <span>Kostenlos anfordern</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="form-submit-icon"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
              </button>
            </div>
          </form>
          <div class="form-success-message" id="successMessage">
            <div class="success-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
